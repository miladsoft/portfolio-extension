{
    "manifest_version": 3,
    "name": "Crypto Prices",
    "description": "Real-time cryptocurrency prices from Binance",
    "version": "1.0",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/icon-16.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        }
    },
    "permissions": [
        "storage",
        "activeTab",
        "sidePanel"
    ],
    "side_panel": {
        "default_path": "index.html?view=sidebar"
    },
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    }
}